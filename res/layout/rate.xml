<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rate_scrollview"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
  	>
	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
	  	<ListView
			android:id="@android:id/list"
			android:visibility="invisible"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			/>
	    <TextView
	    	android:id="@+id/rate_label_beername"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textSize="20sp"
	    	/>
	  	<TableLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			>
			<TableRow>
		        <TextView 
		        	android:id="@+id/rate_label_aroma"
	                android:text="@string/rate_aroma"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingRight="10px"
	                android:paddingLeft="20px"
	                android:clickable="true" android:onClick="onAromaClick"/>
		        <Spinner
		        	android:id="@+id/rate_value_aroma"
		        	android:entries="@array/aroma"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
		        	/>
			</TableRow>
			<TableRow>
		        <TextView 
		        	android:id="@+id/rate_label_appearance"
	                android:text="@string/rate_appearance"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingRight="10px"
	                android:paddingLeft="20px"
	                />
		        <Spinner
		        	android:id="@+id/rate_value_appearance"
		        	android:entries="@array/appearance"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
		        	/>
			</TableRow>
			<TableRow>
		        <TextView 
		        	android:id="@+id/rate_label_flavor"
	                android:text="@string/rate_flavor"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingRight="10px"
	                android:paddingLeft="20px"
	                />
		        <Spinner
		        	android:id="@+id/rate_value_flavor"
		        	android:entries="@array/flavor"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
		        	/>
			</TableRow>
			<TableRow>
		        <TextView 
		        	android:id="@+id/rate_label_palate"
	                android:text="@string/rate_palate"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:paddingRight="10px"
	                android:paddingLeft="20px"
	                />
		        <Spinner
		        	android:id="@+id/rate_value_palate"
		        	android:entries="@array/palate"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
		        	/>
			</TableRow>
			<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/rate_label_overall" android:text="@string/rate_overall" android:layout_height="wrap_content" android:paddingRight="10px" android:paddingLeft="20px" android:layout_width="fill_parent"></TextView>
				<Spinner android:layout_height="wrap_content" android:entries="@array/overall" android:layout_width="fill_parent" android:id="@+id/rate_value_overall"></Spinner>
				<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rate_total" android:text="@string/rate_totalscore"></TextView>
			</TableRow>
	    </TableLayout>
	  	<TextView android:id="@+id/rate_label_charleft" android:textSize="8sp" android:text="@string/rate_charleft" android:layout_width="fill_parent" android:gravity="bottom" android:layout_height="wrap_content"></TextView>
	    <EditText 
	    	android:id="@+id/rate_value_comments"
	       	android:layout_width="fill_parent"
	       	android:layout_height="0dip"
	       	android:layout_weight="1"
	       	android:gravity="top"
	       	android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
	       	android:lines="5"
	       	/>
	    <Button
	    	android:id="@+id/rate_button"
	    	android:text="@string/rate_button"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	/>
	</LinearLayout>
</ScrollView>